<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Start Battle Button -->
    <Button
        android:id="@+id/startBattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Battle" />

    <!-- Joystick section for movement -->
    <GridLayout
        android:id="@+id/joystickGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginTop="16dp">

        <!-- Joystick Buttons -->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/upButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="↑" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/moveLeftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:layout_gravity="center" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/moveRightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="→"
            android:layout_gravity="center" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/downButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="↓" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </GridLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/fireButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire" />

        <Button
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/noopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noop"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Log output -->
    <TextView
        android:id="@+id/logger"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical"
        android:maxLines="4"
        android:ellipsize="end"
        android:text=""
        android:background="#f0f0f0"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

    <!-- Hunt Mode Switch -->
    <Switch
        android:id="@+id/huntSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hunt Mode"
        android:layout_marginTop="16dp" />

</LinearLayout>
